@{
    ViewBag.Title = "SoftwareWarehouse";
}

<style>
    select {
        margin-bottom: 50px;
    }

    .item {
        margin-bottom: 30px;
    }
</style>
<h2><b>Выберите разработчика</b></h2><br />
<form action="/SoftwareWarehouse/SoftwareWarehouse" id="SoftwareWarehouse" method="post">
    <select name="selectedItem" form="SoftwarePart">
        @using VirtualSoftware;
        @using VirtualSoftwarePlace.LogicInterface;
        @using VirtualSoftwarePlace.ConnectingModel;
        @using VirtualSoftwarePlace.UserViewModel;
        @{ int i = 0;
            foreach (DeveloperUserViewModel st in @ViewBag.DataList)
            {
                i++;
                <option value="@i">Разработчик: @st.DeveloperFIO @i</option>
            }
        }
    </select>
    <input type="submit" name="action" value="Сохранить" />
</form>